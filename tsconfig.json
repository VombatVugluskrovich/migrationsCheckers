{
  "compilerOptions": {
    "lib": ["es5", "es6", "es7", "es2017"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "migrations/*.ts",
    "seeds/**/*.ts",
    "api-tests/**/*.ts",
    "./*.config.ts",
    "./*setup.ts",
    "fixes/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
